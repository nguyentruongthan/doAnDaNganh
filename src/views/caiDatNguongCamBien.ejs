        <script>
            const body = document.querySelector("body"),
                sidebar = body.querySelector("nav"),
                toggle = body.querySelector(".toggle"),
                searchBtn = body.querySelector(".search-box"),
                modeSwitch = body.querySelector(".toggle-switch"),
                modeText = body.querySelector(".mode-text");

            toggle.addEventListener("click", () => {
                sidebar.classList.toggle("close");
            });

            searchBtn.addEventListener("click", () => {
                sidebar.classList.remove("close");
            });

            modeSwitch.addEventListener("click", () => {
                body.classList.toggle("dark");

                if (body.classList.contains("dark")) {
                    modeText.innerText = "Light mode";
                } else {
                    modeText.innerText = "Dark mode";
                }
            });
        </script>
        <script>//call api get devices
            const devices = JSON.parse('<%- JSON.stringify(devices) %>');
            const outputDeviceSelectElement = document.querySelector('.outputDeviceSelect');
            const devicesJson = {}
            let lightID, humiSoilID, humiID, tempID;
            devices.forEach(device => {
                devicesJson[device._id] = device;
                if(device.type === '0'){
                    lightID = device._id;
                }else if(device.type === '1'){
                    humiSoilID = device._id;
                }else if(device.type === '2'){
                    humiID = device._id;
                }else if(device.type === '3'){
                    tempID = device._id;
                }
                else if(device.type === '4'){
                    outputDeviceSelectElement.innerHTML += `<option value="${device._id}">${device.deviceName}</option>`;
                }

            })
            

        </script>
        <script>//handle submit
            const btnSubmit = document.querySelector('.btnSubmit');
            btnSubmit.addEventListener('click', async (e) => {
                e.preventDefault();
                outputDeviceSelectElement
                const lightInput = document.querySelector('.lightInput');
                const humiSoilInput = document.querySelector('.humiSoilInput');
                const humiInput = document.querySelector('.humiInput');
                const tempInput = document.querySelector('.tempInput');
                
                const outputID = outputDeviceSelectElement.value;

                const lightCondition = lightInput.querySelector('select').value;
                const lightThreshold = lightInput.querySelector('input').value;

                const humiSoilCondition = humiSoilInput.querySelector('select').value;
                const humiSoilThreshold = humiSoilInput.querySelector('input').value;

                const humiCondition = humiInput.querySelector('select').value;
                const humiThreshold = humiInput.querySelector('input').value;

                const tempCondition = tempInput.querySelector('select').value;
                const tempThreshold = tempInput.querySelector('input').value;

                if(!outputID){
                    alert('Vui lòng chọn động cơ');
                    return;
                }
                let sensorRules = []
                if(lightCondition && lightThreshold){
                    sensorRules.push({
                        'sensorID': lightID,
                        'condition': lightCondition,
                        'threshold': lightThreshold, 
                    })
                }else{
                    sensorRules.push({
                        'sensorID': lightID,
                        'condition': '>',
                        'threshold': '0', 
                    })
                }
                if(humiSoilCondition && humiSoilThreshold){
                    sensorRules.push({
                        'sensorID': humiSoilID,
                        'condition': humiSoilCondition,
                        'threshold': humiSoilThreshold, 
                    })
                }else{
                    sensorRules.push({
                        'sensorID': humiSoilID,
                        'condition': '>',
                        'threshold': '0', 
                    })
                }
                if(humiCondition && humiThreshold){
                    sensorRules.push({
                        'sensorID': humiID,
                        'condition': humiCondition,
                        'threshold': humiThreshold, 
                    })
                }else{
                    sensorRules.push({
                        'sensorID': humiID,
                        'condition': '>',
                        'threshold': '0', 
                    })
                }
                if(tempCondition && tempThreshold){
                    sensorRules.push({
                        'sensorID': tempID,
                        'condition': tempCondition,
                        'threshold': tempThreshold, 
                    })
                }else{
                    sensorRules.push({
                        'sensorID': tempID,
                        'condition': '>',
                        'threshold': '0', 
                    })
                }
                
                console.log(sensorRules);
                await fetch('http://localhost:8080/api/rule/addRules',{
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        'outputID': outputID,
                        'action': '1',
                        'sensorRules': sensorRules
                    }),
                    
                })
                .then(res => {
                    
                    if(res.status === 200){
                        if(window.confirm('Thiết lập thành công.\n Nhấn đồng ý để quay lai trang ngưỡng cảm biến')){
                            window.location.href = '/nguongCamBien';
                        };
                    }
                    else{
                        alert('Thiết lập thất bại');
                    }
                })

            })

        </script>
