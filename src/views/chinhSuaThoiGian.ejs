            const devices = JSON.parse('<%- JSON.stringify(devices) %>');
            const scheduler = JSON.parse('<%- JSON.stringify(scheduler) %>');
            console.log(devices, scheduler);
            const selectDeviceElement = document.querySelector('.form-select');
            let indexOutputDevice = 1;
            let indexSelecedDevice = 0;
            devices.forEach((device, index) => {
                if(device.type === '4'){
                    
                    selectDeviceElement.innerHTML += 
                      `
                        <option value="${device._id}" >${device.deviceName}</option>
                      `;
                    // console.log(device._id === scheduler.outputID)
                    if(device._id === scheduler.outputID){
                      indexSelecedDevice = indexOutputDevice;
                    }
                  indexOutputDevice++;
                }
            })
            selectDeviceElement.selectedIndex = indexSelecedDevice;
            //init start time and stop time
            const startTimeElement = document.querySelector('.startTime');
            const stopTimeElement = document.querySelector('.stopTime');
            const startHour = Math.floor(scheduler.start_time/60) < 10 ? `0${Math.floor(scheduler.start_time/60)}` : `${Math.floor(scheduler.start_time/60)}`;
            const startMinute = scheduler.start_time%60 < 10 ? `0${scheduler.start_time%60}` : `${scheduler.start_time%60}`;
            const stopHour = Math.floor(scheduler.stop_time/60) < 10 ? `0${Math.floor(scheduler.stop_time/60)}` : `${Math.floor(scheduler.stop_time/60)}`;
            const stopMinute = scheduler.stop_time%60 < 10 ? `0${scheduler.stop_time%60}` : `${scheduler.stop_time%60}`;
            startTimeElement.value = `${startHour}:${startMinute}`;
            stopTimeElement.value = `${stopHour}:${stopMinute}`;
            //init select device

        </script>
        <script>//handle submit scheduler time
            const btnSubmit = document.querySelector('.btnSubmit');
            btnSubmit.addEventListener('click', async (e) => {
                e.preventDefault();
                const deviceID = document.querySelector('.form-select').value;
                const startTime = document.querySelector('.startTime').value;
                const stopTime = document.querySelector('.stopTime').value;
                //check empty
                if(!deviceID || !startTime || !stopTime){
                    alert('Vui lòng chọn đầy đủ thông tin');
                    return;
                }
                
                //check time
                const startMinute = parseInt(startTime.split(':')[0])*60 + parseInt(startTime.split(':')[1]);
                const stopMinute = parseInt(stopTime.split(':')[0])*60 + parseInt(stopTime.split(':')[1]);
                if(stopMinute < startMinute){
                    alert('Thời gian kết thúc phải lớn hơn thời gian bắt đầu');
                    return;
                }
                //call api to create scheduler
                const res = await fetch(`/api/scheduler/${scheduler._id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        'outputID': deviceID,
                        'start_time': startMinute,
                        'stop_time': stopMinute,
                        'action': '1'
                    })
                })
                
                if(res.ok){
                    const responseData = await res.json();
                    console.log(responseData);
                    if(window.confirm('Cập nhật lịch thành công.\n Nhấn đồng ý để tải lại trang')){
                        window.location.reload();
                    }
                }else {
                    if(alert('Đặt lịch thất bại. Vui lòng thử lại'));
                }
            })
