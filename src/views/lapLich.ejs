        <script> //call api get all scheduler by user name
            const username = 'nguyentruongthan'
            fetch(`http://localhost:8080/api/scheduler/username/${username}`)
            .then(res => res.json())
            .then(schedulers => {
                schedulers.forEach((scheduler, index) => {
                    // console.log(scheduler)
                    const tbody = document.querySelector('tbody')
                    const device = devices.find(device => device._id === scheduler.outputID)
                    tbody.innerHTML += `
                        <tr>
                            <th scope="row">${index + 1}</th>
                            <td>${device.deviceName}</td>
                            <td>${device.pin}</td>
                            <td>${Math.floor(scheduler.start_time/60)}:${scheduler.start_time%60 < 10 ? `0${scheduler.start_time%60}` : scheduler.start_time%60}</td>
                            <td>${Math.floor(scheduler.stop_time/60)}:${scheduler.stop_time%60 < 10 ? `0${scheduler.stop_time%60}` : scheduler.stop_time%60}</td>
                            <td>
                                <button 
                                    type="button" class="btn btn-danger btnDeleteScheduler"
                                    >
                                    Xóa
                                </button>
                                <button 
                                    type="button" class="btn btn-primary btnUpdateScheduler"
                                    >
                                    Cập nhật
                                </button>
                            </td>
                        </tr>
                    `
                });
                const btnDeleteSchedulers = document.querySelectorAll('.btnDeleteScheduler')
                btnDeleteSchedulers.forEach((btnDeleteScheduler, index) => {
                    btnDeleteScheduler.addEventListener('click', async () => {
                        // console.log(schedulers[index])
                        fetch(`http://localhost:8080/api/scheduler/${schedulers[index]._id}`,{
                            method: 'DELETE'
                        }).then((res) => {
                            if(res.status === 200){
                                if(window.confirm('Xóa thành công. \n Nhấn đồng ý để tải lại trang')){
                                    window.location.reload()
                                }
                            }else{
                                alert('Xóa thất bại');
                            }
                    })
                    })
                })
                const btnUpdateSchedulers = document.querySelectorAll('.btnUpdateScheduler')
                btnUpdateSchedulers.forEach((btnUpdateScheduler, index) => {
                    btnUpdateScheduler.addEventListener('click', () => {
                        const schedulerID = schedulers[index]._id
                        window.location.href = `/chinhSuaThoiGian/${schedulerID}`
                    })
                })
            })
        </script>
