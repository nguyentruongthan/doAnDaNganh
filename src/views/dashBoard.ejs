        <script>// create sensor component
            const iconNames = {
                nhietDo: "device_thermostat",
                doAmKhongKhi: "humidity_percentage",
                doAmDat: "humidity_mid",
                anhSang: "wb_sunny"
            };
            
            const sensorComponent = (device) => {
                const type = parseInt(device.type);
                const deviceID = device._id;
                if(type === 0){//light sensor
                    return `
                        <div class="title" id='${deviceID}'>
                            <span class="material-symbols-outlined icon">
                                ${iconNames.anhSang}
                            </span>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="text">Ánh sáng</span>
                                    <span class="text" id="lightSensor"><span class='value'></span> Lux</span>
                                </div>
                        </div>
                    `
                }else if(type === 1){//humidity soil sensor
                    return `
                        <div class="title" id='${deviceID}'>
                            <span class="material-symbols-outlined icon">
                                ${iconNames.doAmDat}
                            </span>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="text">Độ ẩm đất</span>
                                    <span class="text" id="humiSoilSensor"><span class='value'></span>%</span>
                                </div>
                        </div>
                    `
                }else if(type === 2){//humi air sensensor
                    return `
                        <div class="title" id='${deviceID}'>
                            <span class="material-symbols-outlined icon">
                                ${iconNames.doAmKhongKhi}
                            </span>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="text">Độ ẩm không khí</span>
                                    <span class="text" id="humiAirSensor"><span class='value'></span>%</span>
                                </div>
                        </div>
                        
                    `
                }else if(type === 3){
                    return `
                        <div class="title" id='${deviceID}'>
                            <span class="material-symbols-outlined icon">
                                ${iconNames.nhietDo}
                            </span>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="text">Nhiệt độ</span>
                                    <span class="text" id="tempSensor"><span class='value'></span>℃</span>
                                </div>
                        </div>
                    `;
                }else return "";
                
            }
            
            
            devices.forEach((device) => {
                sensorsContainer.innerHTML += sensorComponent(device);
            });
        </script>
        <script>// create output device component
            const outputDeviceComponent = (index, id, name, pin, value) => {
                return `
                    <tr>
                        <th scope="row">${index}</th>
                        <td>${name}</td>
                        <td>${pin}</td>
                        <td>
                            <div class="form-check form-switch d-flex justify-content-center">
                                ${value === "1" ? 
                                    `<input class='form-check-input outputDevice' type='checkbox' role='switch' id='${id}' pin='${pin}' checked>` :
                                    `<input class='form-check-input outputDevice' type='checkbox' role='switch' id='${id}' pin='${pin}'>`}
                            </div>
                        </td>
                    </tr>
                `
            }
            let indexOutputDevice = 1;
            devices.forEach((device) => {
                if(device.type != "4") return;
                outputDevicesTable.innerHTML += 
                    outputDeviceComponent(indexOutputDevice++, device.deviceID, device.deviceName, device.pin, device.value);
            });

            const outputDevices = document.querySelectorAll(".outputDevice");
            outputDevices.forEach((outputDevice) => {
                outputDevice.addEventListener('click', async (e) => {
                    e.preventDefault();
                    reloadContainer.style.display = "flex";
                    const timeout = setTimeout(() => {
                        reloadContainer.style.display = "none";
                        alert("Không nhận được phản hồi từ Server");
                    }, 5000);
                    try{
                        const res = await fetch('http://localhost:8080/api/controlDevice', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                "username": username,
                                "typeDevice": "3", //Digital output device
                                "pin": `${e.target.getAttribute('pin')}`, //pin of device
                                "deviceID": `${e.target.id}`, //id of device	
                                "value": `${e.target.checked ? "1" : "0"}`
                            })
                        })
                        if(res.ok){
                            const responseData = await res.json();
                            if(responseData.result === "success"){
                                outputDevice.checked = !e.target.checked;
                                reloadContainer.style.display = "none";
                            }else{
                                reloadContainer.style.display = "none";
                                alert("Không nhận được phản hồi từ phía IoTGateway");
                            }
                            clearTimeout(timeout);
                        }else {
                            throw new Error('Network response was not ok.');
                        }
                    }catch(err){
                        console.log(err);
                    }
                })
            })
        </script>
        <script>//call api get latest value
